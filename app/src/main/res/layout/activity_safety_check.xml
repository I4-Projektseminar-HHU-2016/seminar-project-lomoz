<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.lorcan.passwordgenerator.ActivitySettings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password \n Generator"
        android:id="@+id/buttonPWGenerator"
        android:layout_gravity="left|top"
        android:textSize="10dp"
        android:onClick="buttonGoToGeneratePassword"
        android:background="@android:color/holo_blue_light"
        android:textColor="@color/material_grey_600" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy to \n Remember"
        android:id="@+id/buttonEasyPassword"
        android:layout_gravity="center_horizontal|top"
        android:textSize="10dp"
        android:onClick="buttonGoToEasyPassword"
        android:background="@android:color/holo_blue_light"
        android:textColor="@color/material_grey_600" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Safety"
        android:id="@+id/buttonCheckSafety"
        android:layout_gravity="right|top"
        android:textSize="10dp"
        android:background="@drawable/my_button_borders"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Safety Check"
        android:id="@+id/textViewSafetyCheck"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="85dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:layout_gravity="center"
        android:hint="Enter your password"
        android:layout_marginBottom="100dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/buttonCheckpassword"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Security Level"
        android:id="@+id/textViewSecurityLevel"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSecurityLevelColor"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Time to hack Password"
        android:id="@+id/textViewTimeToHackPassword"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="150dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textViewDuration"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

</FrameLayout>
